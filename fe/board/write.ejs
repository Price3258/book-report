<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <title>Write page</title>
</head>

<body class="text-center">
    <div>
        <h1>Write Page</h1>
        <form action="/board/write" method="post">
            <!-- 
                <p>제목</p>
                <p><input id="title" type="text" name="title"></p>
                <p>내용</p>
                <textarea id="content" type="text" name="content"></textarea>
                <p><input type="submit"></p>
            -->


            <div class="form-group row">
                <label for="title" class="col-sm-2 col-form-label">제목</label>
                <div class="col-sm-7">
                    <input id="title" class="form-control" type="text" name="title">
                </div>
            </div>
            <div class="form-group row">
                <label for="content" class="col-sm-2 col-form-label">내용</label>
                <div class="col-sm-7">
                    <textarea id="content" class="form-control" type="text" name="content" rows="8"></textarea>
                </div>
            </div>

            <button type="submit" class="btn btn-default">저장</button>
        </form>
    </div>

    <br><br>
    <div>
        <button class="btn btn-default" onclick="window.location.href='/board'">뒤로가기</button>
        <button class="btn btn-default" onclick="window.location.href='/'">Main Page</button>
    </div>
</body>

</html>